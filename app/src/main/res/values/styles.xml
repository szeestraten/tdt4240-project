<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Menu" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentPrimary</item>
        <item name="android:windowBackground">@color/windowBackgroundPrimary</item>
    </style>

    <style name="AppTheme.Lobby" parent="AppTheme">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorButtonNormal">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccentSecondary</item>
        <item name="android:windowBackground">@color/windowBackgroundSecondary</item>
    </style>

    <style name="AppTheme.Game" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentPrimary</item>
        <item name="android:windowBackground">@color/windowBackgroundPrimary</item>
    </style>

</resources>
